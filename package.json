    "jest-environment-node": "^29.0.0",
    "microbundle": "^0.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0"
